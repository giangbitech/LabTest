@model BiTech.LabTest.Models.ViewModels.Student.SingleQuestion_String_OneChoice_ViewModel


<div class="single-question-div">
    <div>
        <h4>Câu @(Model.STT) (@(Model.Score.Length > 0 ? Model.Score.ToString() + " Điểm" : "")): @(Model.Content) (gạch chân)</h4>
    </div>
    <ul class="">
        @foreach (var item in Model.PossibleAnswerList)
        {
            <li>
                <input type="radio" id="@Model.STT-@item.STT" name="Answer-@Model.STT" value="@item.STT" />
                @Html.LabelFor(model => model.Content, item.Content, new { @for = Model.STT + "-" + item.STT })
                <div class="check"></div>
            </li>
        }
    </ul>
</div>

